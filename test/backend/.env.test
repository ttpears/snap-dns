# test/backend/.env.test
# Test environment configuration for Snap DNS backend
# DO NOT use these values in production!

# Server Configuration
BACKEND_PORT=3002
BACKEND_HOST=0.0.0.0
NODE_ENV=test

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://10.100.0.30:3001

# Session Secret (DO NOT use in production!)
SESSION_SECRET=test-secret-do-not-use-in-production-change-this-value

# TSIG Key Encryption (DO NOT use in production!)
TSIG_ENCRYPTION_KEY=test-encryption-key-32-chars!!

# Temporary Directory
TEMP_DIR=/tmp/snap-dns

# Zone Transfer Memory Protection
MAX_ZONE_RECORDS=10000
ZONE_RECORDS_WARNING_THRESHOLD=5000
MAX_DIG_OUTPUT_SIZE=52428800

# Request Size Limit
MAX_REQUEST_SIZE=10mb

# Test DNS Server
# Use 10.100.0.10 from within Docker network
# Use localhost:5353 from host machine
DNS_SERVER=10.100.0.10
DNS_PORT=53
