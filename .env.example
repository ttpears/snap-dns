WDS_SOCKET_PORT=443
REACT_APP_API_URL=https://snap-dns-api.domain.com/
PUBLIC_URL=https://snap-dns.domain.com/

# Backend Configuration
BACKEND_PORT=3002
BACKEND_HOST=localhost
ALLOWED_ORIGINS=http://localhost:3001,https://snap-dns.domain.com
NODE_ENV=development
MAX_REQUEST_SIZE=10mb

# Session Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Zone Transfer Memory Protection
# Maximum number of DNS records to load into memory per zone
MAX_ZONE_RECORDS=10000
# Warning threshold - log warning when approaching limit
ZONE_RECORDS_WARNING_THRESHOLD=5000
# Maximum dig output size in bytes (50MB default)
MAX_DIG_OUTPUT_SIZE=52428800

# Temporary Directory for nsupdate files
TEMP_DIR=/tmp/snap-dns