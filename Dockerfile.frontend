FROM node:20-slim

WORKDIR /app

# Install dependencies first (better caching)
COPY package*.json ./
RUN npm install -g react-scripts && \
    npm install http-proxy-middleware && \
    npm install

# Copy source code
COPY . .

# Set environment
ENV PORT=3001
ENV HOST=0.0.0.0
ENV WDS_SOCKET_PORT=3001
ENV WDS_SOCKET_HOST=0.0.0.0
ENV DANGEROUSLY_DISABLE_HOST_CHECK=true

# Expose port
EXPOSE 3001

# Start the app
CMD ["npm", "start"] 